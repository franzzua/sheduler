{
	"compilerOptions": {
		"target": "es2021",
		"useDefineForClassFields": false,
		"lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext.Disposable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"composite": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"stripInternal": true,
		"noEmit": false,
		"outDir": "./dist",
		"jsx": "preserve",
		/* Linting */
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"noFallthroughCasesInSwitch": true,
		"types": ["vite/client"]
	},
	"include": [],
	"references": [
		{
			"path": "./apps/optician/tsconfig.json"
		},
		{
			"path": "./apps/shared/tsconfig.json"
		},
		{
			"path": "./tests/mocks/tsconfig.json"
		},
		{
			"path": "./domain/tsconfig.json"
		},
		{
			"path": "./infr/tsconfig.json"
		},
		{
			"path": "./libs/react/tsconfig.json"
		},
		{
			"path": "./libs/core/tsconfig.json"
		},
		{
			"path": "./libs/form/tsconfig.json"
		}
	]
}
